{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --cache",
    "format": "prettier --write '**/*.{ts,js,yml}'",
    "format:check": "prettier --check '**/*.{ts,js,yml}'",
    "bump": "pnpm up @types/node prettier typescript esbuild eslint \"@typescript-eslint/*\" \"eslint-*\"",
    "compile": "pnpm compile --filter \"...[origin/main]\""
  },
  "devDependencies": {
    "@dev-sam/eslint-config-common": "workspace:0.23.0",
    "@types/node": "^16.11.17",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.3",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "extends": "@dev-sam/common"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "endOfLine": "lf",
    "pluginSearchDirs": [
      "."
    ]
  },
  "lint-staged": {
    "**/*.{ts,yml}": [
      "yarn prettier --write"
    ]
  }
}
